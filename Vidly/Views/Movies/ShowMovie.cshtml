@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Movie Rental Info*@

@{
    var className = Model.Customers.Count > 5 ? "popular" : null;
}
<h1>Movie Name:</h1><h2 class="@className">@Model.Movie.Name</h2>
<hr />



@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before. </text>
}
else
{


    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Renter List</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "ShowCustomer", "Customers", new { Id = customer.Id }, null)</td>
                </tr>
                    
            }
        </tbody>
    </table>
}